{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "baseUrl": "./src",
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "typeRoots": ["./types/typings.d.ts"],
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
  },

}
